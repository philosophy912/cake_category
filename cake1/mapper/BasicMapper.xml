<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="">

    <resultMap id="basic" type="Basic">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <association property="materialFormulaSet" column="id"
                     fetchType="lazy"
                     select="com.sophia.cake.mapper.MaterialFormulaMapper.findById"/>
    </resultMap>
    <!-- unit 目前用的是name替代  -->
    <resultMap id="basicVo" type="BasicVo">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="unit" column="name"/>
        <result property="count" column="name"/>
        <result property="totalPrice" column="price"/>
        <association property="materials" column="id" fetchType="lazy"
                     select="com.sophia.cake.mapper.MaterialFormulaMapper.findVoById"/>
    </resultMap>

    <resultMap id="vo" type="BasicVo">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>


    <select id="findAll" resultMap="basic">
        select *
        from t_basic
    </select>

    <select id="findBasicVos" resultMap="basicVo">
        select *
        from t_basic
    </select>

    <select id="findBasics" resultMap="vo">
        select *
        from t_basic
    </select>

    <select id="findByName" resultMap="basic">
        select *
        from t_basic
        where NAME = #{name}
    </select>

    <select id="findById" resultMap="basic">
        select *
        from t_basic
        where id = #{id}
    </select>

    <insert id="add" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into t_basic(NAME, PRICE)
        VALUES (#{name}, #{price})
    </insert>

    <delete id="delete">
        delete
        from t_basic
        where id = #{id}
    </delete>

    <update id="update">
        update t_basic
        <trim prefix="set" suffixOverrides=",">
            <if test="name!=null">NAME=#{name}</if>
            <if test="price!=null">PRICE=#{price}</if>
        </trim>
        where id = #{id}
    </update>

</mapper>